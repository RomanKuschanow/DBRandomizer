<UserControl
    x:Class="DBRandomizer.Controls.ListView"
    xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
    xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
    xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
    xmlns:local="clr-namespace:DBRandomizer.Controls"
    xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
    d:Background="White"
    d:DesignHeight="100"
    d:DesignWidth="200"
    mc:Ignorable="d">

    <Grid x:Name="grid">
        <!--<ScrollViewer x:Name="scroll" VerticalScrollBarVisibility="Hidden">-->
        <ItemsControl
            VerticalAlignment="{Binding Aligment}"
            ItemTemplate="{Binding ItemTemplate}"
            ItemsSource="{Binding ItemsSource}"
            SourceUpdated="ItemsControl_SourceUpdated" />
        <!--</ScrollViewer>-->
    </Grid>

</UserControl>
